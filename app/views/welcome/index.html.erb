<% content_for :title, "Dashboard - NPSP CRM" %>

<div class="mb-6">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-everforest-fg">Dashboard</h1>
  <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">Overview of your nonprofit data</p>
</div>

<!-- Primary Metrics Grid -->
<div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
  <!-- Total Contacts -->
  <div class="bg-white dark:bg-everforest-bg-hard overflow-hidden shadow rounded-lg border border-gray-100 dark:border-everforest-bg-soft">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-gray-400 dark:text-everforest-aqua" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate dark:text-gray-400">Total Contacts</dt>
            <dd class="text-lg font-medium text-gray-900 dark:text-everforest-fg">
              <%= number_with_delimiter(@total_contacts) %>
            </dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <!-- Households -->
  <div class="bg-white dark:bg-everforest-bg-hard overflow-hidden shadow rounded-lg border border-gray-100 dark:border-everforest-bg-soft">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-gray-400 dark:text-everforest-purple" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate dark:text-gray-400">Households</dt>
            <dd class="text-lg font-medium text-gray-900 dark:text-everforest-fg">
              <%= number_with_delimiter(@household_count) %>
            </dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <!-- Total Donations -->
  <div class="bg-white dark:bg-everforest-bg-hard overflow-hidden shadow rounded-lg border border-gray-100 dark:border-everforest-bg-soft">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-gray-400 dark:text-everforest-green" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate dark:text-gray-400">Total Donations</dt>
            <dd class="text-lg font-medium text-gray-900 dark:text-everforest-fg">
              <%= number_to_currency(@total_donations_amount) %>
            </dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <!-- Recurring Donations -->
  <div class="bg-white dark:bg-everforest-bg-hard overflow-hidden shadow rounded-lg border border-gray-100 dark:border-everforest-bg-soft">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-gray-400 dark:text-everforest-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate dark:text-gray-400">Recurring Donations</dt>
            <dd class="text-lg font-medium text-gray-900 dark:text-everforest-fg">
              <%= number_with_delimiter(@recurring_donations_count) %>
            </dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Secondary Metrics Row -->
<div class="grid grid-cols-1 gap-5 lg:grid-cols-2 mb-8">
  <!-- Recent Activity (Last 30 Days) -->
  <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-100 dark:border-everforest-bg-soft p-6">
    <h2 class="text-lg font-medium text-gray-900 dark:text-everforest-fg mb-4">Recent Activity (30 Days)</h2>
    <div class="space-y-4">
      <div class="flex justify-between items-center">
        <span class="text-sm text-gray-600 dark:text-gray-400">Donations Received</span>
        <span class="text-sm font-medium text-gray-900 dark:text-everforest-fg"><%= @recent_donations_count %></span>
      </div>
      <div class="flex justify-between items-center">
        <span class="text-sm text-gray-600 dark:text-gray-400">Amount Raised</span>
        <span class="text-sm font-medium text-everforest-green dark:text-everforest-green"><%= number_to_currency(@recent_donations_amount) %></span>
      </div>
    </div>
  </div>

  <!-- Donation Types Breakdown -->
  <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-100 dark:border-everforest-bg-soft p-6">
    <h2 class="text-lg font-medium text-gray-900 dark:text-everforest-fg mb-4">Donation Types</h2>
    <% if @donation_types.any? %>
      <div class="space-y-3">
        <% @donation_types.each do |type, count| %>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600 dark:text-gray-400 capitalize"><%= type || 'Other' %></span>
            <span class="text-sm font-medium text-gray-900 dark:text-everforest-fg"><%= count %></span>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-sm text-gray-500 dark:text-gray-400">No donation data yet</p>
    <% end %>
  </div>
</div>

<!-- Recurring Donation Frequencies -->
<% if @donation_frequencies.any? %>
<div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-100 dark:border-everforest-bg-soft p-6 mb-8">
  <h2 class="text-lg font-medium text-gray-900 dark:text-everforest-fg mb-4">Recurring Donation Frequencies</h2>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <% @donation_frequencies.each do |frequency, count| %>
      <div class="text-center">
        <div class="text-2xl font-bold text-magenta-600 dark:text-everforest-aqua"><%= count %></div>
        <div class="text-sm text-gray-600 dark:text-gray-400 capitalize"><%= frequency || 'Other' %></div>
      </div>
    <% end %>
  </div>
</div>
<% end %>

<!-- Database Status -->
<div class="bg-white dark:bg-everforest-bg-hard shadow overflow-hidden rounded-md p-4 border border-gray-100 dark:border-everforest-bg-soft">
  <h2 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">System Status</h2>
  <p class="text-sm text-gray-500 dark:text-gray-400">
    Database: <span class="<%= @db_error ? 'text-red-600 dark:text-everforest-red' : 'text-green-600 dark:text-everforest-green' %> font-medium"><%= @db_status %></span>
  </p>
  <% if @db_error %>
    <p class="mt-1 text-sm text-red-600 dark:text-everforest-red"><%= @db_error %></p>
  <% end %>
</div>
