<% content_for :title, "Contacts - NPSP CRM" %>

<div class="mb-6 flex justify-between items-center">
  <div>
    <h1 class="text-2xl font-bold text-gray-900 dark:text-everforest-fg">Contacts</h1>
    <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">Manage individual contacts and donors</p>
  </div>
  <%= link_to new_contact_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-magenta-600 hover:bg-magenta-700 dark:bg-everforest-green dark:hover:bg-everforest-aqua focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-magenta-500" do %>
    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    New Contact
  <% end %>
</div>

<!-- Filter Form -->
<div class="mb-6 bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-200 dark:border-everforest-bg-soft p-4">
  <%= form_with url: contacts_path, method: :get, local: true, class: "space-y-4" do |f| %>
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-4">
      <div>
        <%= f.label :search, "Search by name or email", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.text_field :search, value: params[:search], placeholder: "e.g., John Doe", class: "block w-full rounded-md border-gray-300 dark:border-everforest-bg-soft dark:bg-everforest-bg shadow-sm focus:border-magenta-500 focus:ring-magenta-500 dark:text-everforest-fg sm:text-sm" %>
      </div>
      
      <div>
        <%= f.label :account_id, "Account", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.select :account_id, options_from_collection_for_select(@accounts, :id, :name, params[:account_id]), { include_blank: "All Accounts" }, class: "block w-full rounded-md border-gray-300 dark:border-everforest-bg-soft dark:bg-everforest-bg shadow-sm focus:border-magenta-500 focus:ring-magenta-500 dark:text-everforest-fg sm:text-sm" %>
      </div>
      
      <div class="flex items-end">
        <label class="flex items-center">
          <%= f.check_box :do_not_contact, {}, "1", nil, class: "h-4 w-4 text-magenta-600 focus:ring-magenta-500 border-gray-300 rounded" %>
          <span class="ml-2 text-sm text-gray-900 dark:text-everforest-fg">Do Not Contact Only</span>
        </label>
      </div>
      
      <div class="flex items-end">
        <label class="flex items-center">
          <%= f.check_box :deceased, {}, "1", nil, class: "h-4 w-4 text-magenta-600 focus:ring-magenta-500 border-gray-300 rounded" %>
          <span class="ml-2 text-sm text-gray-900 dark:text-everforest-fg">Deceased Only</span>
        </label>
      </div>
    </div>
    
    <div class="flex items-center space-x-2">
      <%= f.submit "Apply Filters", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-magenta-600 hover:bg-magenta-700 dark:bg-everforest-green dark:hover:bg-everforest-aqua focus:outline-none cursor-pointer" %>
      <%= link_to "Clear Filters", contacts_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-everforest-bg-soft shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-everforest-bg hover:bg-gray-50 dark:hover:bg-everforest-bg-soft" %>
      <% if params[:search].present? || params[:account_id].present? || params[:do_not_contact].present? || params[:deceased].present? %>
        <span class="text-sm text-gray-600 dark:text-gray-400">
          <%= pluralize(@contacts.total_count, 'result') %> found
        </span>
      <% end %>
    </div>
  <% end %>
</div>

<!-- Contacts Table -->
<div class="bg-white dark:bg-everforest-bg-hard shadow overflow-hidden rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
  <% if @contacts.any? %>
    <table class="min-w-full divide-y divide-gray-200 dark:divide-everforest-bg-soft">
      <thead class="bg-gray-50 dark:bg-everforest-bg">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Name</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Email</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Phone</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Account</th>
          <th scope="col" class="relative px-6 py-3">
            <span class="sr-only">Actions</span>
          </th>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-everforest-bg-hard divide-y divide-gray-200 dark:divide-everforest-bg-soft">
        <% @contacts.each do |contact| %>
          <tr class="hover:bg-gray-50 dark:hover:bg-everforest-bg-soft">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900 dark:text-everforest-fg">
                <%= contact.first_name %> <%= contact.last_name %>
              </div>
              <% if contact.title.present? %>
                <div class="text-sm text-gray-500 dark:text-gray-400"><%= contact.title %></div>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
              <%= contact.email || '-' %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
              <%= contact.phone || contact.mobile || '-' %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
              <%= contact.account&.name || '-' %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to 'View', contact_path(contact), class: "text-magenta-600 hover:text-magenta-900 dark:text-everforest-aqua dark:hover:text-everforest-blue mr-3" %>
              <%= link_to 'Edit', edit_contact_path(contact), class: "text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-200 mr-3" %>
              <%= button_to 'Delete', contact_path(contact), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-900 dark:text-everforest-red dark:hover:text-red-400" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-everforest-fg">No contacts</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by creating a new contact.</p>
      <div class="mt-6">
        <%= link_to 'New Contact', new_contact_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-magenta-600 hover:bg-magenta-700 dark:bg-everforest-green dark:hover:bg-everforest-aqua" %>
      </div>
    </div>
  <% end %>
</div>

<!-- Pagination -->
<% if @contacts.total_pages > 1 %>
  <div class="mt-6 flex justify-center">
    <%= paginate @contacts, params: params.permit(:search, :account_id, :do_not_contact, :deceased) %>
  </div>
<% end %>
