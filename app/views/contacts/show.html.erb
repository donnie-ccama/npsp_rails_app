<% content_for :title, "#{@contact.full_name} - NPSP CRM" %>

<!-- Page Header -->
<div class="mb-6 flex justify-between items-start">
  <div>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-everforest-fg"><%= @contact.formal_name %></h1>
    <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
      <% if @contact.title.present? %>
        <%= @contact.title %>
        <% if @contact.account.present? %>
          at <%= @contact.account.name %>
        <% end %>
      <% elsif @contact.account.present? %>
        <%= @contact.account.name %>
      <% end %>
    </p>
  </div>
  <div class="flex space-x-3">
    <%= link_to edit_contact_path(@contact), class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-everforest-bg-soft shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-everforest-bg hover:bg-gray-50 dark:hover:bg-everforest-bg-soft focus:outline-none" do %>
      <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
      Edit
    <% end %>
    <%= button_to contact_path(@contact), method: :delete, data: { confirm: 'Are you sure?' }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 dark:bg-red-700 dark:hover:bg-red-800 focus:outline-none" do %>
      <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
      Delete
    <% end %>
  </div>
</div>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
  <!-- Left Column: Main Information -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Contact Information Card -->
    <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-everforest-bg-soft">
        <h2 class="text-lg font-medium text-gray-900 dark:text-everforest-fg">Contact Information</h2>
      </div>
      <div class="px-6 py-4">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Email</dt>
            <dd class="mt-1 text-sm text-gray-900 dark:text-everforest-fg">
              <% if @contact.email.present? %>
                <a href="mailto:<%= @contact.email %>" class="text-magenta-600 dark:text-everforest-aqua hover:underline">
                  <%= @contact.email %>
                </a>
                <% if @contact.preferred_email.present? %>
                  <span class="ml-2 text-xs text-gray-500 dark:text-gray-400">(<%= @contact.preferred_email.titleize %>)</span>
                <% end %>
              <% else %>
                <span class="text-gray-400 dark:text-gray-500">-</span>
              <% end %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Phone</dt>
            <dd class="mt-1 text-sm text-gray-900 dark:text-everforest-fg">
              <% if @contact.phone.present? %>
                <a href="tel:<%= @contact.phone %>" class="text-magenta-600 dark:text-everforest-aqua hover:underline">
                  <%= @contact.phone %>
                </a>
                <% if @contact.preferred_phone.present? %>
                  <span class="ml-2 text-xs text-gray-500 dark:text-gray-400">(<%= @contact.preferred_phone.titleize %>)</span>
                <% end %>
              <% else %>
                <span class="text-gray-400 dark:text-gray-500">-</span>
              <% end %>
            </dd>
          </div>

          <% if @contact.birthdate.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Birthdate</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-everforest-fg">
                <%= @contact.birthdate.strftime('%B %d, %Y') %>
              </dd>
            </div>
          <% end %>

          <% if @contact.mailing_street.present? || @contact.mailing_city.present? %>
            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Mailing Address</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-everforest-fg">
                <% if @contact.mailing_street.present? %>
                  <%= @contact.mailing_street %><br>
                <% end %>
                <%= [@contact.mailing_city, @contact.mailing_state].compact.join(', ') %>
                <%= @contact.mailing_postal_code %>
                <% if @contact.mailing_country.present? && @contact.mailing_country != 'United States' %>
                  <br><%= @contact.mailing_country %>
                <% end %>
              </dd>
            </div>
          <% end %>
        </dl>
      </div>
    </div>

    <!-- Donation Summary Card -->
    <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-everforest-bg-soft">
        <h2 class="text-lg font-medium text-gray-900 dark:text-everforest-fg">Donation Summary</h2>
      </div>
      <div class="px-6 py-4">
        <dl class="grid grid-cols-2 gap-4 sm:grid-cols-3">
          <div>
            <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Total Gifts</dt>
            <dd class="mt-1 text-2xl font-semibold text-everforest-green dark:text-everforest-green">
              <%= number_to_currency(@contact.total_gifts || 0) %>
            </dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase"># of Gifts</dt>
            <dd class="mt-1 text-2xl font-semibold text-gray-900 dark:text-everforest-fg">
              <%= @contact.number_of_gifts || 0 %>
            </dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Average Gift</dt>
            <dd class="mt-1 text-2xl font-semibold text-gray-900 dark:text-everforest-fg">
              <%= number_to_currency(@contact.average_gift || 0) %>
            </dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">First Gift</dt>
            <dd class="mt-1 text-sm text-gray-900 dark:text-everforest-fg">
              <%= @contact.first_gift_date&.strftime('%b %Y') || '-' %>
            </dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Last Gift</dt>
            <dd class="mt-1 text-sm text-gray-900 dark:text-everforest-fg">
              <%= @contact.last_gift_date&.strftime('%b %Y') || '-' %>
            </dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">This Year</dt>
            <dd class="mt-1 text-sm font-semibold text-everforest-green dark:text-everforest-green">
              <%= number_to_currency(@contact.total_gifts_this_year || 0) %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- Recent Donations -->
    <% if @recent_donations.any? %>
      <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-everforest-bg-soft flex justify-between items-center">
          <h2 class="text-lg font-medium text-gray-900 dark:text-everforest-fg">Recent Donations</h2>
          <%= link_to "View All", donations_path(contact_id: @contact.id), class: "text-sm text-magenta-600 dark:text-everforest-aqua hover:underline" %>
        </div>
        <div class="divide-y divide-gray-200 dark:divide-everforest-bg-soft">
          <% @recent_donations.each do |donation| %>
            <div class="px-6 py-4 flex justify-between items-center hover:bg-gray-50 dark:hover:bg-everforest-bg-soft">
              <div>
                <p class="text-sm font-medium text-gray-900 dark:text-everforest-fg">
                  <%= number_to_currency(donation.amount) %>
                </p>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  <%= donation.close_date&.strftime('%b %d, %Y') || 'Date TBD' %>
                </p>
              </div>
              <%= link_to 'View', donation_path(donation), class: "text-magenta-600 dark:text-everforest-aqua hover:underline text-sm" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Right Column: Quick Facts & Relationships -->
  <div class="space-y-6">
    <!-- Quick Facts Card -->
    <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-everforest-bg-soft">
        <h2 class="text-lg font-medium text-gray-900 dark:text-everforest-fg">Quick Facts</h2>
      </div>
      <div class="px-6 py-4 space-y-4">
        <% if @contact.account.present? %>
          <div>
            <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Household</dt>
            <dd class="mt-1 text-sm text-gray-900 dark:text-everforest-fg">
              <%= link_to @contact.account.name, account_path(@contact.account), class: "text-magenta-600 dark:text-everforest-aqua hover:underline" %>
            </dd>
          </div>
        <% end %>

        <% if @contact.primary_affiliation.present? %>
          <div>
            <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Primary Organization</dt>
            <dd class="mt-1 text-sm text-gray-900 dark:text-everforest-fg">
              <%= link_to @contact.primary_affiliation.name, account_path(@contact.primary_affiliation), class: "text-magenta-600 dark:text-everforest-aqua hover:underline" %>
            </dd>
          </div>
        <% end %>

        <% if @contact.lead_source.present? %>
          <div>
            <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Lead Source</dt>
            <dd class="mt-1 text-sm text-gray-900 dark:text-everforest-fg"><%= @contact.lead_source %></dd>
          </div>
        <% end %>

        <!-- Privacy Flags -->
        <% if @contact.deceased || @contact.do_not_contact || @contact.do_not_call || @contact.email_opt_out %>
          <div>
            <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-2">Privacy</dt>
            <dd class="space-y-1">
              <% if @contact.deceased %>
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200">
                  Deceased
                </span>
              <% end %>
              <% if @contact.do_not_contact %>
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:bg-opacity-30 dark:text-red-300">
                  Do Not Contact
                </span>
              <% end %>
              <% if @contact.do_not_call %>
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:bg-opacity-30 dark:text-yellow-300">
                  Do Not Call
                </span>
              <% end %>
              <% if @contact.email_opt_out %>
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:bg-opacity-30 dark:text-yellow-300">
                  Email Opt Out
                </span>
              <% end %>
            </dd>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recurring Donations Card -->
    <% if @recurring_donations.any? %>
      <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-everforest-bg-soft">
          <h2 class="text-lg font-medium text-gray-900 dark:text-everforest-fg">Recurring Donations</h2>
        </div>
        <div class="px-6 py-4 space-y-3">
          <% @recurring_donations.each do |rd| %>
            <div class="flex justify-between items-start">
              <div>
                <p class="text-sm font-medium text-everforest-green dark:text-everforest-green">
                  <%= number_to_currency(rd.amount) %>
                </p>
                <p class="text-xs text-gray-500 dark:text-gray-400">
                  <%= rd.frequency&.titleize || 'Monthly' %>
                </p>
              </div>
              <%= link_to 'View', recurring_donation_path(rd), class: "text-xs text-magenta-600 dark:text-everforest-aqua hover:underline" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Notes Card -->
    <% if @contact.description.present? %>
      <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-everforest-bg-soft">
          <h2 class="text-lg font-medium text-gray-900 dark:text-everforest-fg">Notes</h2>
        </div>
        <div class="px-6 py-4">
          <p class="text-sm text-gray-700 dark:text-gray-300 whitespace-pre-wrap"><%= @contact.description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
