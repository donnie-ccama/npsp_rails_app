<%= form_with(model: payment, local: true, class: "space-y-8") do |f| %>
  <% if payment.errors.any? %>
    <div class="rounded-md bg-red-50 dark:bg-red-900 dark:bg-opacity-20 p-4 mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400 dark:text-red-300" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
            <%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700 dark:text-red-300">
            <ul class="list-disc pl-5 space-y-1">
              <% payment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-everforest-bg-soft">
      <h3 class="text-lg font-medium text-gray-900 dark:text-everforest-fg">Payment Details</h3>
    </div>
    <div class="px-6 py-4 space-y-4">
      <div>
        <%= f.label :donation_id, "Donation", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= f.collection_select :donation_id, @donations, :id, :name, { include_blank: "Select a donation..." }, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-everforest-bg-soft dark:bg-everforest-bg shadow-sm focus:border-magenta-500 focus:ring-magenta-500 dark:text-everforest-fg sm:text-sm" %>
      </div>

      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        <div>
          <%= f.label :amount, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.number_field :amount, step: 0.01, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-everforest-bg-soft dark:bg-everforest-bg shadow-sm focus:border-magenta-500 focus:ring-magenta-500 dark:text-everforest-fg sm:text-sm" %>
        </div>

        <div>
          <%= f.label :payment_date, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.date_field :payment_date, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-everforest-bg-soft dark:bg-everforest-bg shadow-sm focus:border-magenta-500 focus:ring-magenta-500 dark:text-everforest-fg sm:text-sm" %>
        </div>
      </div>

      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        <div>
          <%= f.label :payment_method, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.select :payment_method, [['Check', 'check'], ['Credit Card', 'credit_card'], ['Cash', 'cash'], ['Wire Transfer', 'wire'], ['ACH', 'ach']], { include_blank: "Select..." }, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-everforest-bg-soft dark:bg-everforest-bg shadow-sm focus:border-magenta-500 focus:ring-magenta-500 dark:text-everforest-fg sm:text-sm" %>
        </div>

        <div>
          <%= f.label :check_reference_number, "Check/Reference #", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.text_field :check_reference_number, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-everforest-bg-soft dark:bg-everforest-bg shadow-sm focus:border-magenta-500 focus:ring-magenta-500 dark:text-everforest-fg sm:text-sm" %>
        </div>
      </div>

      <div class="flex items-center">
        <%= f.check_box :paid, class: "h-4 w-4 text-magenta-600 focus:ring-magenta-500 border-gray-300 rounded" %>
        <%= f.label :paid, "Payment Received", class: "ml-2 block text-sm text-gray-900 dark:text-everforest-fg" %>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", payments_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-everforest-bg-soft shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-everforest-bg hover:bg-gray-50 dark:hover:bg-everforest-bg-soft" %>
    <%= f.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-magenta-600 hover:bg-magenta-700 dark:bg-everforest-green dark:hover:bg-everforest-aqua cursor-pointer" %>
  </div>
<% end %>
