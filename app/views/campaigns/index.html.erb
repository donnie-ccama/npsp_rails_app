<% content_for :title, "Campaigns - NPSP CRM" %>

<div class="mb-6 flex justify-between items-center">
  <div>
    <h1 class="text-2xl font-bold text-gray-900 dark:text-everforest-fg">Campaigns</h1>
    <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">Track fundraising campaigns and initiatives</p>
  </div>
  <%= link_to new_campaign_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-magenta-600 hover:bg-magenta-700 dark:bg-everforest-green dark:hover:bg-everforest-aqua focus:outline-none" do %>
    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    New Campaign
  <% end %>
</div>

<div class="bg-white dark:bg-everforest-bg-hard shadow overflow-hidden rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
  <% if @campaigns.any? %>
    <table class="min-w-full divide-y divide-gray-200 dark:divide-everforest-bg-soft">
      <thead class="bg-gray-50 dark:bg-everforest-bg">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Name</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Period</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Goal</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
          <th scope="col" class="relative px-6 py-3">
            <span class="sr-only">Actions</span>
          </th>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-everforest-bg-hard divide-y divide-gray-200 dark:divide-everforest-bg-soft">
        <% @campaigns.each do |campaign| %>
          <tr class="hover:bg-gray-50 dark:hover:bg-everforest-bg-soft">
            <td class="px-6 py-4">
              <div class="text-sm font-medium text-gray-900 dark:text-everforest-fg">
                <%= campaign.name %>
              </div>
              <% if campaign.description.present? %>
                <div class="text-sm text-gray-500 dark:text-gray-400"><%= truncate(campaign.description, length: 50) %></div>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
              <%= campaign.start_date&.strftime('%b %Y') %> - <%= campaign.end_date&.strftime('%b %Y') || 'Ongoing' %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-everforest-green dark:text-everforest-green">
              <%= number_to_currency(campaign.goal_amount || 0) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% status_color = campaign.status == 'active' ? 'green' : (campaign.status == 'completed' ? 'blue' : 'gray') %>
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= status_color %>-100 text-<%= status_color %>-800 dark:bg-opacity-20 capitalize">
                <%= campaign.status || 'planned' %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to 'View', campaign_path(campaign), class: "text-magenta-600 hover:text-magenta-900 dark:text-everforest-aqua dark:hover:text-everforest-blue mr-3" %>
              <%= link_to 'Edit', edit_campaign_path(campaign), class: "text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-200 mr-3" %>
              <%= button_to 'Delete', campaign_path(campaign), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-900 dark:text-everforest-red dark:hover:text-red-400" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-everforest-fg">No campaigns</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by creating a new campaign.</p>
      <div class="mt-6">
        <%= link_to 'New Campaign', new_campaign_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-magenta-600 hover:bg-magenta-700 dark:bg-everforest-green dark:hover:bg-everforest-aqua" %>
      </div>
    </div>
  <% end %>
</div>
