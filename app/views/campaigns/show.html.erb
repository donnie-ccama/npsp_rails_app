<% content_for :title, "#{@campaign.name} - NPSP CRM" %>

<div class="mb-6 flex justify-between items-start">
  <div>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-everforest-fg"><%= @campaign.name %></h1>
    <% if @campaign.campaign_type.present? %>
      <p class="mt-1 text-sm text-gray-600 dark:text-gray-400"><%= @campaign.campaign_type %></p>
    <% end %>
  </div>
  <div class="flex space-x-3">
    <%= link_to edit_campaign_path(@campaign), class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-everforest-bg-soft shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-everforest-bg hover:bg-gray-50 dark:hover:bg-everforest-bg-soft" do %>
      <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
      Edit
    <% end %>
    <%= button_to campaign_path(@campaign), method: :delete, data: { confirm: 'Are you sure?' }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" do %>
      <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
      Delete
    <% end %>
  </div>
</div>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
  <div class="lg:col-span-2 space-y-6">
    <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-everforest-bg-soft">
        <h2 class="text-lg font-medium text-gray-900 dark:text-everforest-fg">Campaign Statistics</h2>
      </div>
      <div class="px-6 py-4">
        <dl class="grid grid-cols-2 gap-4 sm:grid-cols-3">
          <div>
            <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Goal</dt>
            <dd class="mt-1 text-2xl font-semibold text-gray-900 dark:text-everforest-fg">
              <%= number_to_currency(@campaign.expected_revenue || 0) %>
            </dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Budgeted Cost</dt>
            <dd class="mt-1 text-2xl font-semibold text-gray-900 dark:text-everforest-fg">
              <%= number_to_currency(@campaign.budgeted_cost || 0) %>
            </dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Actual Cost</dt>
            <dd class="mt-1 text-2xl font-semibold text-gray-900 dark:text-everforest-fg">
              <%= number_to_currency(@campaign.actual_cost || 0) %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <% if @donations.any? %>
      <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-everforest-bg-soft">
          <h2 class="text-lg font-medium text-gray-900 dark:text-everforest-fg">Recent Donations</h2>
        </div>
        <div class="divide-y divide-gray-200 dark:divide-everforest-bg-soft">
          <% @donations.each do |donation| %>
            <div class="px-6 py-4 flex justify-between items-center hover:bg-gray-50 dark:hover:bg-everforest-bg-soft">
              <div>
                <p class="text-sm font-medium text-gray-900 dark:text-everforest-fg">
                  <%= number_to_currency(donation.amount) %>
                </p>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  <%= donation.close_date&.strftime('%b %d, %Y') || 'Date TBD' %>
                </p>
              </div>
              <%= link_to 'View', donation_path(donation), class: "text-magenta-600 dark:text-everforest-aqua hover:underline text-sm" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @campaign.description.present? %>
      <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-everforest-bg-soft">
          <h2 class="text-lg font-medium text-gray-900 dark:text-everforest-fg">Description</h2>
        </div>
        <div class="px-6 py-4">
          <p class="text-sm text-gray-700 dark:text-gray-300 whitespace-pre-wrap"><%= @campaign.description %></p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="space-y-6">
    <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-everforest-bg-soft">
        <h2 class="text-lg font-medium text-gray-900 dark:text-everforest-fg">Details</h2>
      </div>
      <div class="px-6 py-4 space-y-3">
        <% if @campaign.status.present? %>
          <div>
            <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Status</dt>
            <dd class="mt-1">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800 dark:bg-blue-900 dark:bg-opacity-30 dark:text-blue-300 capitalize">
                <%= @campaign.status.titleize.gsub('_', ' ') %>
              </span>
            </dd>
          </div>
        <% end %>
        <% if @campaign.start_date.present? %>
          <div>
            <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Start Date</dt>
            <dd class="mt-1 text-sm text-gray-900 dark:text-everforest-fg">
              <%= @campaign.start_date.strftime('%b %d, %Y') %>
            </dd>
          </div>
        <% end %>
        <% if @campaign.end_date.present? %>
          <div>
            <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">End Date</dt>
            <dd class="mt-1 text-sm text-gray-900 dark:text-everforest-fg">
              <%= @campaign.end_date.strftime('%b %d, %Y') %>
            </dd>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
