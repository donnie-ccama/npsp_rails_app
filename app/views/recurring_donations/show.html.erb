<% content_for :title, "#{@recurring_donation.name || 'Recurring Donation'} - NPSP CRM" %>

<div class="mb-6 flex justify-between items-start">
  <div>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-everforest-fg"><%= @recurring_donation.name || "Recurring Donation #{@recurring_donation.id}" %></h1>
    <% if @recurring_donation.contact.present? %>
      <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
        <%= link_to @recurring_donation.contact.full_name, contact_path(@recurring_donation.contact), class: "text-magenta-600 dark:text-everforest-aqua hover:underline" %>
      </p>
    <% end %>
  </div>
  <div class="flex space-x-3">
    <%= link_to edit_recurring_donation_path(@recurring_donation), class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-everforest-bg-soft shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-everforest-bg hover:bg-gray-50 dark:hover:bg-everforest-bg-soft" do %>
      <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
      Edit
    <% end %>
    <%= button_to recurring_donation_path(@recurring_donation), method: :delete, data: { confirm: 'Are you sure?' }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" do %>
      <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
      Delete
    <% end %>
  </div>
</div>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
  <div class="lg:col-span-2 space-y-6">
    <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-everforest-bg-soft">
        <h2 class="text-lg font-medium text-gray-900 dark:text-everforest-fg">Details</h2>
      </div>
      <div class="px-6 py-4">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Amount</dt>
            <dd class="mt-1 text-3xl font-bold text-everforest-green dark:text-everforest-green">
              <%= number_to_currency(@recurring_donation.amount || 0) %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Frequency</dt>
            <dd class="mt-1 text-lg text-gray-900 dark:text-everforest-fg capitalize">
              <%= @recurring_donation.installment_period || '-' %>
            </dd>
          </div>
          <% if @recurring_donation.start_date.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Start Date</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-everforest-fg">
                <%= @recurring_donation.start_date.strftime('%B %d, %Y') %>
              </dd>
            </div>
          <% end %>
          <% if @recurring_donation.day_of_month.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Day of Month</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-everforest-fg">
                <%= @recurring_donation.day_of_month.ordinalize %>
              </dd>
            </div>
          <% end %>
        </dl>
      </div>
    </div>

    <% if @donations.any? %>
      <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-everforest-bg-soft">
          <h2 class="text-lg font-medium text-gray-900 dark:text-everforest-fg">Generated Donations</h2>
        </div>
        <div class="divide-y divide-gray-200 dark:divide-everforest-bg-soft">
          <% @donations.each do |donation| %>
            <div class="px-6 py-4 flex justify-between items-center hover:bg-gray-50 dark:hover:bg-everforest-bg-soft">
              <div>
                <p class="text-sm font-medium text-gray-900 dark:text-everforest-fg">
                  <%= number_to_currency(donation.amount) %>
                </p>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  <%= donation.close_date&.strftime('%b %d, %Y') || 'Date TBD' %>
                </p>
              </div>
              <%= link_to 'View', donation_path(donation), class: "text-magenta-600 dark:text-everforest-aqua hover:underline text-sm" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="space-y-6">
    <% if @recurring_donation.payment_method.present? %>
      <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-everforest-bg-soft">
          <h2 class="text-lg font-medium text-gray-900 dark:text-everforest-fg">Payment Method</h2>
        </div>
        <div class="px-6 py-4">
          <p class="text-sm text-gray-900 dark:text-everforest-fg capitalize">
            <%= @recurring_donation.payment_method.titleize.gsub('_', ' ') %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
