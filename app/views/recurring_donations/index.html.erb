<% content_for :title, "Recurring Donations - NPSP CRM" %>

<div class="mb-6 flex justify-between items-center">
  <div>
    <h1 class="text-2xl font-bold text-gray-900 dark:text-everforest-fg">Recurring Donations</h1>
    <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">Manage subscription and ongoing donations</p>
  </div>
  <%= link_to new_recurring_donation_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-magenta-600 hover:bg-magenta-700 dark:bg-everforest-green dark:hover:bg-everforest-aqua focus:outline-none" do %>
    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    New Recurring Donation
  <% end %>
</div>

<div class="bg-white dark:bg-everforest-bg-hard shadow overflow-hidden rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
  <% if @recurring_donations.any? %>
    <table class="min-w-full divide-y divide-gray-200 dark:divide-everforest-bg-soft">
      <thead class="bg-gray-50 dark:bg-everforest-bg">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Donor</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Amount</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Frequency</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Period</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
          <th scope="col" class="relative px-6 py-3">
            <span class="sr-only">Actions</span>
          </th>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-everforest-bg-hard divide-y divide-gray-200 dark:divide-everforest-bg-soft">
        <% @recurring_donations.each do |rd| %>
          <tr class="hover:bg-gray-50 dark:hover:bg-everforest-bg-soft">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900 dark:text-everforest-fg">
                <%= rd.contact&.first_name %> <%= rd.contact&.last_name %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-everforest-green dark:text-everforest-green">
              <%= number_to_currency(rd.amount) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400 capitalize">
              <%= rd.frequency || '-' %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
              <%= rd.start_date&.strftime('%b %Y') %> - <%= rd.end_date&.strftime('%b %Y') || 'Ongoing' %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% status_color = rd.status == 'active' ? 'green' : 'gray' %>
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= status_color %>-100 text-<%= status_color %>-800 dark:bg-everforest-<%= status_color == 'green' ? 'green' : 'fg' %> dark:bg-opacity-20 dark:text-everforest-<%= status_color == 'green' ? 'green' : 'fg' %>">
                <%= rd.status || 'active' %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to 'View', recurring_donation_path(rd), class: "text-magenta-600 hover:text-magenta-900 dark:text-everforest-aqua dark:hover:text-everforest-blue mr-3" %>
              <%= link_to 'Edit', edit_recurring_donation_path(rd), class: "text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-200 mr-3" %>
              <%= button_to 'Delete', recurring_donation_path(rd), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-900 dark:text-everforest-red dark:hover:text-red-400" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-everforest-fg">No recurring donations</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by setting up a new recurring donation.</p>
      <div class="mt-6">
        <%= link_to 'New Recurring Donation', new_recurring_donation_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-magenta-600 hover:bg-magenta-700 dark:bg-everforest-green dark:hover:bg-everforest-aqua" %>
      </div>
    </div>
  <% end %>
</div>
