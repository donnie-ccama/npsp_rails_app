<%= form_with(model: recurring_donation, local: true, class: "space-y-8") do |f| %>
  <% if recurring_donation.errors.any? %>
    <div class="rounded-md bg-red-50 dark:bg-red-900 dark:bg-opacity-20 p-4 mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400 dark:text-red-300" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
            <%= pluralize(recurring_donation.errors.count, "error") %> prohibited this recurring donation from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700 dark:text-red-300">
            <ul class="list-disc pl-5 space-y-1">
              <% recurring_donation.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Basic Information -->
  <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-everforest-bg-soft">
      <h3 class="text-lg font-medium text-gray-900 dark:text-everforest-fg">Recurring Donation Details</h3>
    </div>
    <div class="px-6 py-4 space-y-4">
      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= f.text_field :name, placeholder: "e.g., Monthly Sustainer Gift", class: "mt-1 block w-full rounded-md border-gray-300 dark:border-everforest-bg-soft dark:bg-everforest-bg shadow-sm focus:border-magenta-500 focus:ring-magenta-500 dark:text-everforest-fg sm:text-sm" %>
      </div>

      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        <div>
          <%= f.label :amount, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.number_field :amount, step: 0.01, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-everforest-bg-soft dark:bg-everforest-bg shadow-sm focus:border-magenta-500 focus:ring-magenta-500 dark:text-everforest-fg sm:text-sm" %>
        </div>

        <div>
          <%= f.label :installment_period, "Frequency", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.select :installment_period, [['Monthly', 'monthly'], ['Quarterly', 'quarterly'], ['Annually', 'yearly']], { include_blank: "Select..." }, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-everforest-bg-soft dark:bg-everforest-bg shadow-sm focus:border-magenta-500 focus:ring-magenta-500 dark:text-everforest-fg sm:text-sm" %>
        </div>
      </div>

      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        <div>
          <%= f.label :start_date, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.date_field :start_date, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-everforest-bg-soft dark:bg-everforest-bg shadow-sm focus:border-magenta-500 focus:ring-magenta-500 dark:text-everforest-fg sm:text-sm" %>
        </div>

        <div>
          <%= f.label :day_of_month, "Day of Month", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.number_field :day_of_month, min: 1, max: 31, placeholder: "e.g., 15", class: "mt-1 block w-full rounded-md border-gray-300 dark:border-everforest-bg-soft dark:bg-everforest-bg shadow-sm focus:border-magenta-500 focus:ring-magenta-500 dark:text-everforest-fg sm:text-sm" %>
        </div>
      </div>

      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        <div>
          <%= f.label :planned_installments, "# of Installments", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <p class="text-xs text-gray-500 dark:text-gray-400">Leave blank for ongoing</p>
          <%= f.number_field :planned_installments, min: 1, placeholder: "e.g., 12", class: "mt-1 block w-full rounded-md border-gray-300 dark:border-everforest-bg-soft dark:bg-everforest-bg shadow-sm focus:border-magenta-500 focus:ring-magenta-500 dark:text-everforest-fg sm:text-sm" %>
        </div>

        <div>
          <%= f.label :payment_method, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.select :payment_method, [['Credit Card', 'credit_card'], ['ACH', 'ach'], ['Check', 'check']], { include_blank: "Select..." }, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-everforest-bg-soft dark:bg-everforest-bg shadow-sm focus:border-magenta-500 focus:ring-magenta-500 dark:text-everforest-fg sm:text-sm" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Donor Information -->
  <div class="bg-white dark:bg-everforest-bg-hard shadow rounded-lg border border-gray-200 dark:border-everforest-bg-soft">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-everforest-bg-soft">
      <h3 class="text-lg font-medium text-gray-900 dark:text-everforest-fg">Donor Information</h3>
    </div>
    <div class="px-6 py-4 space-y-4">
      <div>
        <%= f.label :contact_id, "Contact", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= f.collection_select :contact_id, @contacts, :id, :full_name, { include_blank: "Select a contact..." }, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-everforest-bg-soft dark:bg-everforest-bg shadow-sm focus:border-magenta-500 focus:ring-magenta-500 dark:text-everforest-fg sm:text-sm" %>
      </div>

      <div>
        <%= f.label :account_id, "Account", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= f.collection_select :account_id, @accounts, :id, :name, { include_blank: "Select an account..." }, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-everforest-bg-soft dark:bg-everforest-bg shadow-sm focus:border-magenta-500 focus:ring-magenta-500 dark:text-everforest-fg sm:text-sm" %>
      </div>

      <div>
        <%= f.label :campaign_id, "Campaign", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= f.collection_select :campaign_id, @campaigns, :id, :name, { include_blank: "None" }, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-everforest-bg-soft dark:bg-everforest-bg shadow-sm focus:border-magenta-500 focus:ring-magenta-500 dark:text-everforest-fg sm:text-sm" %>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", recurring_donations_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-everforest-bg-soft shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-everforest-bg hover:bg-gray-50 dark:hover:bg-everforest-bg-soft focus:outline-none" %>
    <%= f.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-magenta-600 hover:bg-magenta-700 dark:bg-everforest-green dark:hover:bg-everforest-aqua focus:outline-none cursor-pointer" %>
  </div>
<% end %>
